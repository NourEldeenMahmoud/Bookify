                    <i class="lucide lucide-calendar-check mr-2" data-lucide="calendar-check"></i>
                    My Bookings
                </h2>

                <!-- Upcoming Bookings -->
                @if (upcomingBookings.Any())
                {
                    <div class="mb-8">
                        <div class="flex items-center justify-between mb-4">
                            <h3 class="text-xl font-semibold text-royal-dark">Upcoming Bookings</h3>
                            <span class="px-3 py-1 bg-amber-100 text-amber-700 rounded-full text-xs font-semibold">
                                @upcomingCount @(upcomingCount == 1 ? "booking" : "bookings")
                            </span>
                        </div>
                        <div class="space-y-4">
                            @foreach (var booking in upcomingBookings)
                            {
                                <div class="bg-gradient-to-r from-amber-50 to-orange-50 border-l-4 border-amber-500 rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow">
                                    <div class="flex flex-col md:flex-row justify-between items-start gap-4">
                                        <div class="flex-1">
                                            <div class="flex items-center space-x-4 mb-3">
                                                <h4 class="text-lg font-bold text-royal-dark">
                                                    @(booking.Room?.RoomType?.Name ?? "Room")
