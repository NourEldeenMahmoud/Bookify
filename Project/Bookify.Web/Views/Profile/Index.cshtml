                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-gray-600">Email Verified</span>
                        <span class="px-2 py-1 @(Model.EmailConfirmed ? "bg-green-100 text-green-700" : "bg-yellow-100 text-yellow-700") rounded-full text-xs font-semibold">
                            @(Model.EmailConfirmed ? "Verified" : "Pending")
                        </span>
                    </div>
                    @if (Model.CreatedAt != default)
                    {
                        <div class="flex items-center justify-between">
                            <span class="text-gray-600">Member Since</span>
                            <span class="text-royal-dark font-medium">@Model.CreatedAt.ToString("MMM yyyy")</span>
                        </div>
                    }
                </div>
            </div>
            <div class="bg-white rounded-2xl shadow-xl p-6">
                <h3 class="text-xl font-bold text-royal-dark mb-4 flex items-center">
                    <i class="lucide lucide-zap mr-2" data-lucide="zap"></i>
                    Quick Actions
                </h3>
                <div class="space-y-3">
                    <a asp-controller="Home" asp-action="Index"
                       class="flex items-center p-3 bg-amber-50 hover:bg-amber-100 rounded-lg transition-colors group">
                        <i class="lucide lucide-search text-amber-600 mr-3 group-hover:scale-110 transition-transform" data-lucide="search"></i>
                        <span class="text-royal-dark font-medium">Search Rooms</span>
                    </a>
                    <a asp-controller="Account" asp-action="ChangePassword"
                       class="flex items-center p-3 bg-blue-50 hover:bg-blue-100 rounded-lg transition-colors group">
                        <i class="lucide lucide-key text-blue-600 mr-3 group-hover:scale-110 transition-transform" data-lucide="key"></i>
                        <span class="text-royal-dark font-medium">Change Password</span>
