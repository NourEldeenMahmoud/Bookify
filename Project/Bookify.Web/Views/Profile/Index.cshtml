                    <div class="d-flex flex-wrap gap-3 small opacity-75">

                        @if (Model.CreatedAt != default)
                        {
                            <span>
                                <i class="bi bi-calendar-event-fill me-1"></i>
                                Member since @Model.CreatedAt.ToString("MMMM yyyy")
                            </span>
                        }

