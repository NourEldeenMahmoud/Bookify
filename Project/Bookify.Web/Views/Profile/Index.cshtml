                                                            data-booking-room="@(booking.Room?.RoomType?.Name ?? "Room") @(booking.Room?.RoomNumber ?? "")"
                                                            data-booking-checkin="@booking.CheckInDate.ToString("MMM dd, yyyy")"
                                                            data-booking-checkout="@booking.CheckOutDate.ToString("MMM dd, yyyy")"
                                                            data-booking-total="@booking.TotalAmount.ToString("N0")">
                                                        <i class="lucide lucide-x-circle mr-2" data-lucide="x-circle"></i>
                                                        Cancel Booking
