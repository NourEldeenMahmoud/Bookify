                        }

                        @if (!string.IsNullOrEmpty(Model.City) || !string.IsNullOrEmpty(Model.Country))
                        {
                            <span>
                                <i class="bi bi-geo-alt-fill me-1"></i>
                                @(Model.City ?? "")@(Model.City != null && Model.Country != null ? ", " : "")@(Model.Country ?? "")
                            </span>
                        }

                    </div>

                </div>

            </div>

        </div>
    </div>


    <!-- Statistics Cards -->


    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Left Column: Profile Information -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Profile Information Card -->
            <div class="bg-white rounded-2xl shadow-xl p-8">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-2xl font-bold text-royal-dark flex items-center">
                        <i class="lucide lucide-user mr-2" data-lucide="user"></i>
                        Profile Information
                    </h2>
                    <span class="px-3 py-1 bg-amber-100 text-amber-700 rounded-full text-xs font-semibold">
                        <i class="lucide lucide-edit-2 inline-block mr-1" data-lucide="edit-2"></i>
                        Editable
                    </span>
