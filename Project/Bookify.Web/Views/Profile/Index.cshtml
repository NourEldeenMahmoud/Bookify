@model Bookify.Data.Models.ApplicationUser
@using Bookify.Data.Models
@using Bookify.Data.Data.Enums
@using Bookify.Web.ViewModels

@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var upcomingBookings = ViewBag.UpcomingBookings as IEnumerable<Booking> ?? Enumerable.Empty<Booking>();
    var pastBookings = ViewBag.PastBookings as IEnumerable<Booking> ?? Enumerable.Empty<Booking>();
    
    // Get all bookings (upcoming + past) for accurate statistics
    var allBookings = upcomingBookings.Concat(pastBookings).ToList();
    
    // Calculate statistics
    var totalBookings = allBookings.Count();
    // Total Spent should include all Paid and Completed bookings (regardless of date)
    var totalSpent = allBookings
        .Where(b => b.Status == BookingStatus.Paid || b.Status == BookingStatus.Completed)
        .Sum(b => b.TotalAmount);
    var upcomingCount = upcomingBookings.Count();
    var completedCount = allBookings.Count(b => b.Status == BookingStatus.Completed);
    
    // Calculate age if DateOfBirth is available
    int? age = null;
    if (Model.DateOfBirth.HasValue)
    {
        var today = DateTime.Today;
        age = today.Year - Model.DateOfBirth.Value.Year;
        if (Model.DateOfBirth.Value.Date > today.AddYears(-age.Value))
            age--;
    }
}

