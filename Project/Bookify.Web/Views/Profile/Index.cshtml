<!-- Cancel Booking Confirmation Modal -->
<div id="cancelBookingModal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black bg-opacity-50 backdrop-blur-sm" style="display: none;">
    <div class="bg-white rounded-lg shadow-2xl mx-4 transform transition-all" style="max-width: 640px !important; width: auto !important;">
        <!-- Modal Header -->
        <div class="bg-gradient-to-r from-red-500 to-red-600 px-3 py-2.5 rounded-t-lg">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-1.5">
                    <div class="bg-white bg-opacity-20 rounded-full p-1">
                        <i class="lucide lucide-alert-triangle text-white text-base" data-lucide="alert-triangle"></i>
                    </div>
                    <h3 class="text-base font-bold text-white">Cancel Booking</h3>
                </div>
                <button type="button" id="closeCancelModal" class="text-white hover:bg-white hover:bg-opacity-20 rounded-full p-0.5 transition-colors">
                    <i class="lucide lucide-x text-base" data-lucide="x"></i>
                </button>
            </div>
        </div>

        <!-- Modal Body -->
        <div class="px-3 py-3">
            <p class="text-gray-700 mb-2.5 text-xs">Are you sure you want to cancel this booking?</p>
            
            <!-- Booking Details -->
            <div class="bg-gray-50 rounded-lg p-2.5 mb-2.5 border border-gray-200">
                <div class="space-y-1 text-xs">
                    <div class="flex justify-between">
                        <span class="text-gray-600 font-medium">Room:</span>
                        <span class="text-gray-900 font-semibold text-right" id="modalBookingRoom">-</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600 font-medium">Check-in:</span>
                        <span class="text-gray-900 font-semibold" id="modalBookingCheckIn">-</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600 font-medium">Check-out:</span>
                        <span class="text-gray-900 font-semibold" id="modalBookingCheckOut">-</span>
                    </div>
                    <div class="flex justify-between pt-1 border-t border-gray-200">
                        <span class="text-gray-600 font-medium">Total:</span>
                        <span class="text-red-600 font-bold" id="modalBookingTotal">-</span>
                    </div>
                </div>
            </div>

            <div class="bg-amber-50 border-l-4 border-amber-400 p-2 rounded mb-2.5">
                <p class="text-xs text-amber-800 leading-tight">
                    <i class="lucide lucide-info inline-block mr-1" data-lucide="info"></i>
                    <strong>Note:</strong> Refund will be processed per cancellation policy.
                </p>
            </div>
        </div>

        <!-- Modal Footer -->
        <div class="px-3 py-2.5 bg-gray-50 rounded-b-lg flex justify-end space-x-2">
            <button type="button" id="cancelModalBtn" class="px-3 py-1.5 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded text-xs font-medium transition-colors">
                Keep
            </button>
            <form id="confirmCancelForm" method="post" asp-controller="Bookings" asp-action="Cancel" class="inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="modalBookingId" value="" />
                <button type="submit" class="px-3 py-1.5 bg-red-500 hover:bg-red-600 text-white rounded text-xs font-medium transition-colors flex items-center">
                    <i class="lucide lucide-x-circle mr-1 text-xs" data-lucide="x-circle"></i>
                    Cancel
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/lucide@latest"></script>
    <script>
        if (typeof lucide !== 'undefined' && lucide.createIcons) {
            lucide.createIcons();
        }

        // Cancel Booking Modal
        (function() {
            const modal = document.getElementById('cancelBookingModal');
            const closeBtn = document.getElementById('closeCancelModal');
            const cancelBtn = document.getElementById('cancelModalBtn');
            const confirmForm = document.getElementById('confirmCancelForm');
            const cancelButtons = document.querySelectorAll('.cancel-booking-btn');

            function showModal(bookingId, room, checkIn, checkOut, total) {
                document.getElementById('modalBookingId').value = bookingId;
                document.getElementById('modalBookingRoom').textContent = room;
                document.getElementById('modalBookingCheckIn').textContent = checkIn;
                document.getElementById('modalBookingCheckOut').textContent = checkOut;
                document.getElementById('modalBookingTotal').textContent = total + ' EGP';
                
                modal.style.display = 'flex';
                modal.classList.remove('hidden');
                document.body.style.overflow = 'hidden';
                
                // Re-initialize lucide icons
                if (typeof lucide !== 'undefined' && lucide.createIcons) {
                    lucide.createIcons();
                }
            }

            function hideModal() {
                modal.style.display = 'none';
                modal.classList.add('hidden');
                document.body.style.overflow = '';
            }

            // Open modal when cancel button is clicked
            cancelButtons.forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    const bookingId = this.getAttribute('data-booking-id');
                    const room = this.getAttribute('data-booking-room');
                    const checkIn = this.getAttribute('data-booking-checkin');
                    const checkOut = this.getAttribute('data-booking-checkout');
                    const total = this.getAttribute('data-booking-total');
                    
                    showModal(bookingId, room, checkIn, checkOut, total);
                });
            });

            // Close modal handlers
            closeBtn.addEventListener('click', hideModal);
            cancelBtn.addEventListener('click', hideModal);

            // Close modal when clicking outside
            modal.addEventListener('click', function(e) {
                if (e.target === modal) {
                    hideModal();
                }
            });

            // Close modal on Escape key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
                    hideModal();
                }
            });
        })();
    </script>
    <partial name="_ValidationScriptsPartial" />
}
