                    {
                        @Model.FirstName[0]
                    }
                    else if (!string.IsNullOrEmpty(Model.Email))
                    {
                        @Model.Email[0]
                    }
                </div>

                <!-- User Info -->
                <div class="text-center text-md-start">

                    <h1 class="fw-bold fs-1 mb-2">
                        @(Model.FirstName ?? "User") @(Model.LastName ?? "")
