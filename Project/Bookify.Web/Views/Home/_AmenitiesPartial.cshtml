<!-- Amenities Section -->
<section id="amenities" class="page-section" style="background: none !important;">
  <div class="container">
    <h2 class="section-title">Premium Amenities</h2>
    <p class="section-subtitle">Indulge in world-class facilities designed for your comfort and pleasure</p>

    <div class="amenities-grid">
      <div class="amenity-card">
        <div class="icon"><i class="bi bi-droplet-half"></i></div>
        <h3>Luxury Spa</h3>
        <p>Rejuvenate with premium treatments and wellness services</p>
      </div>
      <div class="amenity-card">
        <div class="icon"><i class="bi bi-water"></i></div>
        <h3>Infinity Pool</h3>
        <p>Stunning rooftop pool with panoramic city views</p>
      </div>
      <div class="amenity-card">
        <div class="icon"><i class="bi bi-egg-fried"></i></div>
        <h3>Fine Dining</h3>
        <p>Michelin-starred restaurant with international cuisine</p>
      </div>
      <div class="amenity-card">
        <div class="icon"><i class="bi bi-heart-pulse"></i></div>
        <h3>Fitness Center</h3>
        <p>State-of-the-art equipment and personal trainers</p>
      </div>
      <div class="amenity-card">
        <div class="icon"><i class="bi bi-headset"></i></div>
        <h3>24/7 Concierge</h3>
        <p>Personalized service at your fingertips</p>
      </div>
      <div class="amenity-card">
        <div class="icon"><i class="bi bi-wifi"></i></div>
        <h3>High-Speed WiFi</h3>
        <p>Complimentary internet throughout the property</p>
      </div>
      <div class="amenity-card">
        <div class="icon"><i class="bi bi-car-front"></i></div>
        <h3>Valet Parking</h3>
        <p>Secure parking with professional valet service</p>
      </div>
      <div class="amenity-card">
        <div class="icon"><i class="bi bi-cup-hot"></i></div>
        <h3>Room Service</h3>
        <p>Gourmet meals delivered to your room anytime</p>
      </div>
      <div class="amenity-card">
        <div class="icon"><i class="bi bi-music-note-beamed"></i></div>
        <h3>Live Music Lounge</h3>
        <p>Enjoy nightly live performances in our elegant lounge</p>
      </div>
      <div class="amenity-card">
        <div class="icon"><i class="bi bi-controller"></i></div>
        <h3>Game Room</h3>
        <p>Play pool, chess, or console games in our recreation area</p>
      </div>
      <div class="amenity-card">
        <div class="icon"><i class="bi bi-tree"></i></div>
        <h3>Garden Terrace</h3>
        <p>Relax in a peaceful outdoor space surrounded by nature</p>
      </div>
      <div class="amenity-card">
        <div class="icon"><i class="bi bi-bag-heart"></i></div>
        <h3>Luxury Boutique</h3>
        <p>Shop exclusive designer collections right inside the hotel</p>
      </div>
    </div>
  </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/amenities.css" asp-append-version="true" />
}

