<!-- Contact Section -->
<section id="contact" class="contact-container">
  <div class="contact-header">
    <h1>We'd Love to Hear From You</h1>
    <p>Feel free to reach out — whether you're planning your next stay, have a special request, or simply wish to learn more about our world of luxury hospitality.</p>
  </div>

  <div class="contact-grid">
    <div class="contact-info">
      <div class="info-card">
        <i class="fa-solid fa-location-dot"></i>
        <div>
          <h3>Visit Us</h3>
          <p>123 Luxury Avenue<br>Paradise City, PC 12345</p>
        </div>
      </div>
      <div class="info-card">
        <i class="fa-solid fa-phone"></i>
        <div>
          <h3>Call Us</h3>
          <p>+1 (555) 123-4567<br>Mon–Sun: 24/7</p>
        </div>
      </div>
      <div class="info-card">
        <i class="fa-solid fa-envelope"></i>
        <div>
          <h3>Email Us</h3>
          <p>info@royalhaven.com<br>reservations@royalhaven.com</p>
        </div>
      </div>
    </div>

  </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/contact.css" asp-append-version="true" />
}

