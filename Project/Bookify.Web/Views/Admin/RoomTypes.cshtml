@model IEnumerable<Bookify.Data.Models.RoomType>

@{
    ViewData["Title"] = "Room Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-panel.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
}

<div class="admin-page-container">
    <h1 class="admin-page-title">Room Types Management</h1>
    
    @await Html.PartialAsync("_AdminQuickActions")

    @Html.AntiForgeryToken()

    <div class="admin-card">
        <div class="admin-card-header">
            <h2 class="admin-card-title">Room Types</h2>
            <a href="@Url.Action("CreateRoomType", "Admin")" class="btn btn-admin btn-admin-primary">
                <i class="fas fa-plus me-2"></i> Create New Room Type
            </a>
        </div>

    <table class="table table-striped data-table" data-export="true">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price Per Night</th>
                <th>Max Occupancy</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var roomType in Model)
            {
                <tr>
                    <td>@roomType.Id</td>
                    <td>@roomType.Name</td>
                    <td>@(roomType.Description?.Length > 50 ? roomType.Description.Substring(0, 50) + "..." : roomType.Description ?? "N/A")</td>
                    <td>$@roomType.PricePerNight.ToString("N2")</td>
                    <td>@roomType.MaxOccupancy</td>
                    <td>
                        @if (!string.IsNullOrEmpty(roomType.ImageUrl))
                        {
                            var imagePath = roomType.ImageUrl;
                            if (imagePath.Contains("wwwroot\\images") || imagePath.Contains("wwwroot/images"))
                            {
                                var fileName = System.IO.Path.GetFileName(imagePath);
                                imagePath = $"~/images/{fileName}";
                            }
                            else if (!imagePath.StartsWith("~/") && !imagePath.StartsWith("/") && !imagePath.StartsWith("http"))
                            {
                                imagePath = $"~/images/{System.IO.Path.GetFileName(imagePath)}";
                            }
                            <img src="@Url.Content(imagePath)" alt="@roomType.Name" class="img-thumbnail" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </td>
                    <td>
                        <div class="action-buttons">
                            <a href="@Url.Action("RoomTypeDetails", "Admin", new { id = roomType.Id })" class="btn btn-action btn-view" title="View Details">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="@Url.Action("EditRoomType", "Admin", new { id = roomType.Id })" class="btn btn-action btn-edit" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="@Url.Action("DeleteRoomType", "Admin", new { id = roomType.Id })" 
                               class="btn btn-action btn-delete confirm-delete" 
                               data-message="Are you sure you want to delete this room type?" 
                               title="Delete"
                               data-method="post">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
}

