@model Bookify.Web.ViewModels.RoomTypeViewModel

@{
    ViewData["Title"] = "Create Room Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-panel.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
}

<div class="admin-page-container">
    <h1 class="admin-page-title">Create New Room Type</h1>
    
    @await Html.PartialAsync("_AdminQuickActions")

    <div class="admin-card">
        <div class="admin-card-header">
            <h2 class="admin-card-title">Room Type Information</h2>
            <a href="@Url.Action("RoomTypes", "Admin")" class="btn btn-admin btn-admin-primary">
                <i class="fas fa-arrow-left me-2"></i> Back to List
            </a>
        </div>

    <form asp-action="CreateRoomType" asp-controller="Admin" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="form-label">Name *</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PricePerNight" class="form-label">Price Per Night *</label>
                    <input asp-for="PricePerNight" class="form-control" type="number" step="100" min="1000" required />
                    <span asp-validation-for="PricePerNight" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="MaxOccupancy" class="form-label">Max Occupancy *</label>
                    <input asp-for="MaxOccupancy" class="form-control" type="number" min="1" required />
                    <span asp-validation-for="MaxOccupancy" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ImageFile" class="form-label">Image</label>
                    <input asp-for="ImageFile" class="form-control" accept="image/*" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                    <small class="form-text text-muted">Max file size: 5MB. Allowed types: JPG, PNG, GIF</small>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-admin btn-admin-primary">
                <i class="fas fa-save"></i> Create Room Type
            </button>
            <a href="@Url.Action("RoomTypes", "Admin")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

