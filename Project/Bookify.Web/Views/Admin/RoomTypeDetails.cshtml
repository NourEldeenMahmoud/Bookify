@model Bookify.Data.Models.RoomType
@using Bookify.Data.Models

@{
    ViewData["Title"] = "Room Type Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var rooms = ViewBag.Rooms as IEnumerable<Room> ?? new List<Room>();
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-panel.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
}

<div class="admin-page-container">
    <h1 class="admin-page-title">Room Type Details</h1>
    
    @await Html.PartialAsync("_AdminQuickActions")

    <div class="admin-card">
        <div class="admin-card-header">
            <h2 class="admin-card-title">@Model.Name</h2>
            <div>
                <a href="@Url.Action("EditRoomType", "Admin", new { id = Model.Id })" class="btn btn-admin btn-admin-primary me-2">
                    <i class="fas fa-edit me-2"></i> Edit
                </a>
                <a href="@Url.Action("RoomTypes", "Admin")" class="btn btn-admin btn-admin-primary">
                    <i class="fas fa-arrow-left me-2"></i> Back to List
                </a>
            </div>
        </div>

    <div class="row">
        <div class="col-md-6">
            <h4>Room Type Information</h4>
            <table class="table table-bordered">
                <tr>
                    <th>ID</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>@(Model.Description ?? "N/A")</td>
                </tr>
                <tr>
                    <th>Price Per Night</th>
                    <td>$@Model.PricePerNight.ToString("N2")</td>
                </tr>
                <tr>
                    <th>Max Occupancy</th>
                    <td>@Model.MaxOccupancy</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            var imagePath = Model.ImageUrl;
                            if (imagePath.Contains("wwwroot\\images") || imagePath.Contains("wwwroot/images"))
                            {
                                var fileName = System.IO.Path.GetFileName(imagePath);
                                imagePath = $"~/images/{fileName}";
                            }
                            else if (!imagePath.StartsWith("~/") && !imagePath.StartsWith("/") && !imagePath.StartsWith("http"))
                            {
                                imagePath = $"~/images/{System.IO.Path.GetFileName(imagePath)}";
                            }
                            <img src="@Url.Content(imagePath)" alt="@Model.Name" class="img-thumbnail" style="max-width: 300px;" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <div class="mt-4">
        <h4>Rooms of This Type (@rooms.Count())</h4>
        @if (rooms.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Room Number</th>
                        <th>Availability</th>
                        <th>Notes</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in rooms)
                    {
                        <tr>
                            <td>@room.RoomNumber</td>
                            <td>
                                @if (room.IsAvailable)
                                {
                                    <span class="badge badge-success">Available</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Unavailable</span>
                                }
                            </td>
                            <td>@(room.Notes ?? "N/A")</td>
                            <td>
                                <a href="@Url.Action("RoomDetails", "Admin", new { id = room.Id })" class="btn btn-sm btn-action btn-view">
                                    <i class="fas fa-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No rooms of this type yet.</p>
        }
    </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
}

