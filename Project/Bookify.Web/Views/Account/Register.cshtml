@model Bookify.Web.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Create Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Register.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <!-- Tailwind عبر CDN مؤقت؛ الأفضل تضمينه في _Layout مرة واحدة -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body.account-page-body {
            display: flex !important;
            flex-direction: row !important;
            justify-content: center !important;
            align-items: center !important;
            min-height: 100vh !important;
            margin: 0 !important;
            padding: 20px !important;
            width: 100% !important;
            background-color: #f7f7f7 !important;
        }
        
        body.account-page-body .page-wrapper {
            width: 100% !important;
            min-height: 100vh !important;
            display: flex !important;
            justify-content: center !important;
            align-items: center !important;
            margin: 0 !important;
            padding: 0 !important;
        }
        
        body.account-page-body .content-wrapper {
            margin-left: 0 !important;
            width: 100% !important;
            display: flex !important;
            justify-content: center !important;
            align-items: center !important;
            min-height: 100vh !important;
            padding: 0 !important;
        }
        
        body.account-page-body .main-content {
            display: flex !important;
            justify-content: center !important;
            align-items: center !important;
            width: 100% !important;
            min-height: 100vh !important;
            padding: 20px !important;
            margin: 0 !important;
        }
        
        .login-form-container {
            margin: 0 auto !important;
        }
    </style>
}

<div class="login-form-container w-full max-w-5xl bg-white rounded-2xl shadow-2xl flex flex-col lg:flex-row overflow-hidden" style="min-height: 600px; max-height: 90vh;">
    <!-- Left Side: Image and Welcome -->
    <div class="image-overlay relative text-white lg:w-5/12 w-full flex-shrink-0" style="min-height: 740px;">
        <div class="relative z-10 w-full h-full flex flex-col justify-center items-center text-center px-6 py-10">
            <h1 class="text-4xl font-extrabold mb-4 border-b border-white/50 pb-2">Welcome, Sir!</h1>
            <p class="text-lg font-light max-w-xs">
                Create your account to join <strong class="font-bold">RoyalHaven</strong> and start your journey.
            </p>
        </div>
    </div>

    <!-- Right Side: Form -->
    <div class="lg:w-7/12 w-full p-8 sm:p-12 bg-royal-light flex-grow overflow-y-auto" style="min-height: 600px; display: flex; flex-direction: column;">
        <div class="max-w-md mx-auto text-center">
            <h2 id="create-title" class="text-3xl font-bold text-royal-dark mb-2">Create Account</h2>
            <p id="create-subtitle" class="text-royal-dark/80 mb-6 text-sm" style="color: #ac613e;font-weight: bold;">Fill in the form</p>

            <form asp-controller="Account" asp-action="Register" method="post" id="create-form" novalidate>
                <div class="mb-4">
                    <label asp-for="FirstName" class="sr-only">First Name</label>
                    <div class="relative">
                        <input asp-for="FirstName" placeholder="First Name" required
                               class="w-full p-3 border-2 border-amber-200 rounded-lg outline-none focus:ring-2 focus:ring-orange-400 focus:border-orange-400 bg-white text-amber-900" />
                        <span class="lucide lucide-user absolute right-3 top-4 h-5 w-5 text-amber-600" data-lucide="user"></span>
                    </div>
                    <span asp-validation-for="FirstName" class="text-sm text-red-600"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="LastName" class="sr-only">Last Name</label>
                    <div class="relative">
                        <input asp-for="LastName" placeholder="Last Name" required
                               class="w-full p-3 border-2 border-amber-200 rounded-lg outline-none focus:ring-2 focus:ring-orange-400 focus:border-orange-400 bg-white text-amber-900" />
                        <span class="lucide lucide-user absolute right-3 top-4 h-5 w-5 text-amber-600" data-lucide="user"></span>
                    </div>
                    <span asp-validation-for="LastName" class="text-sm text-red-600"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Email" class="sr-only">Email</label>
                    <div class="relative">
                        <input asp-for="Email" placeholder="Email address" required
                               class="w-full p-3 border-2 border-amber-200 rounded-lg outline-none focus:ring-2 focus:ring-orange-400 focus:border-orange-400 bg-white text-amber-900" />
                        <span class="lucide lucide-mail absolute right-3 top-4 h-5 w-5 text-amber-600" data-lucide="mail"></span>
                    </div>
                    <span asp-validation-for="Email" class="text-sm text-red-600"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="sr-only">Password</label>
                    <div class="relative">
                        <input asp-for="Password" type="password" placeholder="Password" required
                               class="w-full p-3 border-2 border-amber-200 rounded-lg outline-none focus:ring-2 focus:ring-orange-400 focus:border-orange-400 bg-white text-amber-900" />
                        <span class="lucide lucide-lock absolute right-3 top-4 h-5 w-5 text-amber-600" data-lucide="lock"></span>
                    </div>
                    <span asp-validation-for="Password" class="text-sm text-red-600"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="ConfirmPassword" class="sr-only">Confirm Password</label>
                    <div class="relative">
                        <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" required
                               class="w-full p-3 border-2 border-amber-200 rounded-lg outline-none focus:ring-2 focus:ring-orange-400 focus:border-orange-400 bg-white text-amber-900" />
                        <span class="lucide lucide-lock absolute right-3 top-4 h-5 w-5 text-amber-600" data-lucide="lock"></span>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-sm text-red-600"></span>
                </div>

                <button type="submit"
                        class="w-full py-3 bg-gradient-to-r from-amber-500 to-orange-600 text-white text-center rounded-lg hover:from-amber-600 hover:to-orange-700 transition-all shadow-md hover:shadow-lg transform hover:scale-[1.02] font-bold text-lg">
                    Create Account
                </button>
            </form>

            <div class="text-center mt-8 mb-4 text-royal-dark/70">
                <p class="px-2 text-amber-900/60">Already have an account?</p>
                <a asp-controller="Account" asp-action="Login" class="text-lg font-bold text-royal-brown hover:text-royal-dark transition-colors text-amber-700 hover:text-orange-600">Back to Login</a>
            </div>
        </div>
    </div>
</div>

<div id="message-box" class="fixed bottom-4 left-1/2 -translate-x-1/2 bg-green-500 text-white p-3 rounded-lg shadow-xl hidden transition-opacity duration-300 z-50"></div>

@section Scripts {
    <script src="https://unpkg.com/lucide@latest"></script>
    <script>
        if (typeof lucide !== 'undefined' && lucide.createIcons) {
            lucide.createIcons();
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}
