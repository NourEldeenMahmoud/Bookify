@model Bookify.Web.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body.account-page-body {
            display: flex !important;
            flex-direction: row !important;
            justify-content: center !important;
            align-items: center !important;
            min-height: 100vh !important;
            margin: 0 !important;
            padding: 0 !important;
            width: 100vw !important;
            height: 100vh !important;
            overflow: hidden !important;
            background-color: #f7f7f7 !important;
        }
        
        body.account-page-body .page-wrapper {
            width: 100vw !important;
            height: 100vh !important;
            display: flex !important;
            justify-content: center !important;
            align-items: center !important;
            margin: 0 !important;
            padding: 0 !important;
        }
        
        body.account-page-body .content-wrapper {
            margin-left: 0 !important;
            width: 100% !important;
            display: flex !important;
            justify-content: center !important;
            align-items: center !important;
            height: 100vh !important;
            padding: 0 !important;
        }
        
        body.account-page-body .main-content {
            display: flex !important;
            justify-content: center !important;
            align-items: center !important;
            width: 100% !important;
            height: 100vh !important;
            padding: 20px !important;
            margin: 0 !important;
        }
        
        .login-form-container {
            margin: 0 auto !important;
        }
    </style>
}

<div class="login-form-container w-full max-w-5xl bg-white rounded-2xl shadow-2xl flex flex-col lg:flex-row overflow-hidden" style="min-height: 600px;">
    <!-- Left Side -->
    <div class="image-overlay relative text-white lg:w-5/12 w-full flex-shrink-0">
        <div class="relative z-10 w-full h-full flex flex-col justify-center items-center text-center px-6 py-10">
            <h1 class="text-4xl font-extrabold mb-4 border-b border-white/50 pb-2">Change Your Password</h1>
            <p class="text-lg font-light max-w-xs">
                Update your password to keep your account secure with <strong class="font-bold">RoyalHaven</strong>.
            </p>
        </div>
    </div>

    <!-- Right Side -->
    <div class="lg:w-7/12 w-full p-8 sm:p-12 bg-royal-light flex-grow overflow-y-auto">
        <div class="max-w-md mx-auto text-center">
            <h2 class="text-3xl font-bold text-royal-dark mb-2">Change Password</h2>
            <p class="text-royal-dark mb-6 text-sm">Enter your current password and new password</p>

            @if (TempData["Error"] != null)
            {
                <div class="mb-4 bg-red-50 border-l-4 border-red-500 p-4 rounded-lg text-left">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="lucide lucide-alert-circle text-red-500" data-lucide="alert-circle"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-red-700">@TempData["Error"]</p>
                        </div>
                    </div>
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="mb-4 bg-red-50 border-l-4 border-red-500 p-4 rounded-lg text-left">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="lucide lucide-alert-circle text-red-500" data-lucide="alert-circle"></i>
                        </div>
                        <div class="ml-3">
                            <div asp-validation-summary="All" class="text-sm text-red-700"></div>
                        </div>
                    </div>
                </div>
            }

            <form asp-controller="Account" asp-action="ChangePassword" method="post" id="change-password-form" novalidate>
                <div class="mb-4">
                    <label asp-for="CurrentPassword" class="sr-only">Current Password</label>
                    <div class="relative">
                        <input asp-for="CurrentPassword" type="password" placeholder="Current Password" required
                               class="w-full p-3 border-2 border-amber-200 rounded-lg outline-none focus:ring-2 focus:ring-orange-400 focus:border-orange-400 bg-white text-amber-900" />
                        <span class="lucide lucide-lock absolute right-3 top-4 h-5 w-5 text-amber-600" data-lucide="lock"></span>
                    </div>
                    <span asp-validation-for="CurrentPassword" class="text-sm text-red-600"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="NewPassword" class="sr-only">New Password</label>
                    <div class="relative">
                        <input asp-for="NewPassword" type="password" placeholder="New Password" required
                               class="w-full p-3 border-2 border-amber-200 rounded-lg outline-none focus:ring-2 focus:ring-orange-400 focus:border-orange-400 bg-white text-amber-900" />
                        <span class="lucide lucide-lock absolute right-3 top-4 h-5 w-5 text-amber-600" data-lucide="lock"></span>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-sm text-red-600"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="ConfirmPassword" class="sr-only">Confirm New Password</label>
                    <div class="relative">
                        <input asp-for="ConfirmPassword" type="password" placeholder="Confirm New Password" required
                               class="w-full p-3 border-2 border-amber-200 rounded-lg outline-none focus:ring-2 focus:ring-orange-400 focus:border-orange-400 bg-white text-amber-900" />
                        <span class="lucide lucide-lock absolute right-3 top-4 h-5 w-5 text-amber-600" data-lucide="lock"></span>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-sm text-red-600"></span>
                </div>

                <button type="submit"
                        class="w-full py-3 bg-gradient-to-r from-amber-500 to-orange-600 text-white text-center rounded-lg hover:from-amber-600 hover:to-orange-700 transition-all shadow-md hover:shadow-lg transform hover:scale-[1.02]">
                    <i class="lucide lucide-key inline-block mr-2" data-lucide="key"></i>
                    Change Password
                </button>
            </form>

            <div class="text-center mt-6">
                <a asp-controller="Profile" asp-action="Index" 
                   class="text-royal-brown hover:text-royal-dark transition-colors text-sm">
                    <i class="lucide lucide-arrow-left inline-block mr-1" data-lucide="arrow-left"></i>
                    Back to Profile
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/lucide@latest"></script>
    <script>
        if (typeof lucide !== 'undefined' && lucide.createIcons) {
            lucide.createIcons();
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}

