@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
    <script src="https://cdn.tailwindcss.com"></script>
}

<div class="w-full max-w-4xl bg-white rounded-2xl shadow-2xl flex flex-col lg:flex-row overflow-hidden mx-auto my-8">
    <!-- Left Side -->
    <div class="image-overlay relative text-white lg:w-5/12 w-full flex-shrink-0">
        <div class="relative z-10 w-full h-full flex flex-col justify-center items-center text-center px-6 py-10">
            <h1 class="text-4xl font-extrabold mb-4 border-b border-white/50 pb-2">Check Your Email</h1>
            <p class="text-lg font-light max-w-xs">
                We've sent you a password reset link. Please check your inbox.
            </p>
        </div>
    </div>

    <!-- Right Side -->
    <div class="lg:w-7/12 w-full p-8 sm:p-12 bg-royal-light flex-grow overflow-y-auto">
        <div class="max-w-md mx-auto text-center">
            @if (TempData["Success"] != null)
            {
                <div class="mb-6">
                    <i class="lucide lucide-mail-check text-6xl text-green-500 mb-4" data-lucide="mail-check"></i>
                </div>
                
                <h2 class="text-3xl font-bold text-royal-dark mb-4">Email Sent!</h2>
                
                <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6 text-left">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="lucide lucide-check-circle text-green-500" data-lucide="check-circle"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-green-700">
                                @TempData["Success"]
                            </p>
                        </div>
                    </div>
                </div>
            }
            else if (TempData["Error"] != null)
            {
                <div class="mb-6">
                    <i class="lucide lucide-alert-circle text-6xl text-red-500 mb-4" data-lucide="alert-circle"></i>
                </div>
                
                <h2 class="text-3xl font-bold text-royal-dark mb-4">Email Not Sent</h2>
                
                <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 text-left">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="lucide lucide-x-circle text-red-500" data-lucide="x-circle"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-red-700">
                                @TempData["Error"]
                            </p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="mb-6">
                    <i class="lucide lucide-mail text-6xl text-amber-500 mb-4" data-lucide="mail"></i>
                </div>
                
                <h2 class="text-3xl font-bold text-royal-dark mb-4">Check Your Email</h2>
                
                <p class="text-royal-dark/80 mb-8 text-base">
                    If an account with this email exists, a password reset link has been sent to your email address. Please check your inbox and follow the instructions.
                </p>
            }

            <div class="space-y-4">
                <a asp-controller="Account" asp-action="Login" 
                   class="block w-full py-3 bg-gradient-to-r from-amber-500 to-orange-600 text-white text-center rounded-lg hover:from-amber-600 hover:to-orange-700 transition-all shadow-md hover:shadow-lg transform hover:scale-[1.02]">
                    <i class="lucide lucide-arrow-left inline-block mr-2" data-lucide="arrow-left"></i>
                    Back to Login
                </a>

                <a asp-controller="Home" asp-action="Index" 
                   class="block text-royal-brown hover:text-royal-dark transition-colors text-sm">
                    Return to Home
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/lucide@latest"></script>
    <script>
        if (typeof lucide !== 'undefined' && lucide.createIcons) {
            lucide.createIcons();
        }
    </script>
}
