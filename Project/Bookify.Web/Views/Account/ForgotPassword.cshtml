@model Bookify.Web.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forget Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <!-- لو بتحب تحط CSS خاص بالصفحة هنا، أو ضعه في _Layout ليكون مشترك -->
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/forgetpassword.css" />
    <!-- Tailwind عادة تحطه في _Layout أو ملف build ثابت؛ لكن لو CDN مؤقت -->
    <script src="https://cdn.tailwindcss.com"></script>
}

<div class="w-full max-w-4xl bg-white rounded-2xl shadow-2xl flex flex-col lg:flex-row overflow-hidden mx-auto my-8">
    <!-- Left Side -->
    <div class="image-overlay relative text-white lg:w-5/12 w-full flex-shrink-0">
        <div class="relative z-10 w-full h-full flex flex-col justify-center items-center text-center px-6 py-10">
            <h1 class="text-4xl font-extrabold mb-4 border-b border-white/50 pb-2">Reset Your Password</h1>
            <p class="text-lg font-light max-w-xs">
                Enter your registered email and we’ll send you a link to reset your password.
            </p>
        </div>
    </div>

    <!-- Right Side -->
    <div class="lg:w-7/12 w-full p-8 sm:p-12 bg-royal-light flex-grow overflow-y-auto">
        <div class="max-w-md mx-auto text-center">
            <h2 class="text-3xl font-bold text-royal-dark mb-2">Forget Password?</h2>
            <p class="text-royal-dark/80 mb-6 text-sm" style="color: #ac613e; font-weight: bold;">
                Enter your email to receive a password reset link.
            </p>

            <!-- استخدمت Tag Helpers لربط الفورم بالـ Controller -->
            <form asp-controller="Account" asp-action="ForgotPassword" method="post" id="reset-form">
                <div class="mb-6">
                    <label for="Email" class="sr-only">Email</label>
                    <div class="relative">
                        <input asp-for="Email" type="email" id="Email" placeholder="Email address" required
                               class="w-full p-3 border-2 border-amber-200 rounded-lg outline-none focus:ring-2 focus:ring-orange-400 focus:border-orange-400 bg-white text-amber-900" />
                        <span class="lucide lucide-mail absolute right-3 top-4 h-5 w-5 text-amber-600" data-lucide="mail" size="20"></span>
                    </div>
                    <span asp-validation-for="Email" class="text-sm text-red-600"></span>
                </div>

                <button type="submit"
                        class="w-full py-3 bg-gradient-to-r from-amber-500 to-orange-600 text-white text-center rounded-lg hover:from-amber-600 hover:to-orange-700 transition-all shadow-md hover:shadow-lg transform hover:scale-[1.02]">
                    Send Reset Link
                </button>
            </form>

            <div class="mt-8">
                <a asp-controller="Account" asp-action="Login" class="text-royal-brown hover:underline text-sm font-medium">
                    <i data-lucide="arrow-left" class="inline w-4 h-4 mr-1"></i> Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Message box -->
<div id="message-box" class="fixed bottom-4 left-1/2 -translate-x-1/2 bg-green-500 text-white p-3 rounded-lg shadow-xl hidden transition-opacity duration-300 z-50"></div>

@section Scripts {
    <!-- Lucide icons -->
    <script src="https://unpkg.com/lucide@latest"></script>

    <!-- لو عندك ملف JS خاص بالنسخة القديمة حطه في wwwroot/js -->
    <script src="~/js/forgetpassword.js"></script>

    <script>
        // تهيئة أي أيقونات Lucide المستخدمة في الصفحة
        if (typeof lucide !== 'undefined' && lucide.createIcons) {
            lucide.createIcons();
        }

        // مثال: التعامل مع العرض الرسائل بعد إرسال الفورم (يمكنك الاستفادة من forgetpassword.js بدل هذا)
        document.getElementById('reset-form')?.addEventListener('submit', function (e) {
            // لو معتمد على ارسال غير مزود JS اتركه لـ Controller لمعالجة الطلب
        });
    </script>
}
