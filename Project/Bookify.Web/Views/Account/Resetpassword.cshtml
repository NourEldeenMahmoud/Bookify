@model Bookify.Web.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/resetpassword.css" />
    <!-- Tailwind CDN مؤقت؛ الأفضل تضمينه في _Layout أو عبر build -->
    <script src="https://cdn.tailwindcss.com"></script>
}

<div class="w-full max-w-4xl bg-white rounded-2xl shadow-2xl flex flex-col lg:flex-row overflow-hidden mx-auto my-8">
    <!-- Left Side -->
    <div class="image-overlay relative text-white lg:w-5/12 w-full flex-shrink-0">
        <div class="relative z-10 w-full h-full flex flex-col justify-center items-center text-center px-6 py-10">
            <h1 class="text-4xl font-extrabold mb-4 border-b border-white/50 pb-2">Reset Your Password</h1>
            <p class="text-lg font-light max-w-xs">
                Enter your new password to continue your journey with <strong class="font-bold">RoyalHaven</strong>.
            </p>
        </div>
    </div>

    <!-- Right Side -->
    <div class="lg:w-7/12 w-full p-8 sm:p-12 bg-royal-light flex-grow overflow-y-auto">
        <div class="max-w-md mx-auto text-center">
            <h2 class="text-3xl font-bold text-royal-dark mb-2">Reset Password</h2>
            <p class="text-royal-dark mb-6 text-sm">Fill in your email and new password</p>

            <form asp-controller="Account" asp-action="ResetPassword" method="post" id="reset-form" novalidate>
                @* hidden token and email *@
                <input asp-for="Token" type="hidden" />
                <div class="mb-4">
                    <label asp-for="Email" class="sr-only">Email</label>
                    <div class="relative">
                        <input asp-for="Email" type="email" placeholder="Email address" required
                               class="w-full p-3 border-2 border-amber-200 rounded-lg outline-none focus:ring-2 focus:ring-orange-400 focus:border-orange-400 bg-white text-amber-900" />
                        <span class="lucide lucide-mail absolute right-3 top-4 h-5 w-5 text-amber-600" data-lucide="mail"></span>
                    </div>
                    <span asp-validation-for="Email" class="text-sm text-red-600"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="sr-only">New Password</label>
                    <div class="relative">
                        <input asp-for="Password" type="password" placeholder="New Password" required
                               class="w-full p-3 border-2 border-amber-200 rounded-lg outline-none focus:ring-2 focus:ring-orange-400 focus:border-orange-400 bg-white text-amber-900" />
                        <span class="lucide lucide-lock absolute right-3 top-4 h-5 w-5 text-amber-600" data-lucide="lock"></span>
                    </div>
                    <span asp-validation-for="Password" class="text-sm text-red-600"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="ConfirmPassword" class="sr-only">Confirm Password</label>
                    <div class="relative">
                        <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" required
                               class="w-full p-3 border-2 border-amber-200 rounded-lg outline-none focus:ring-2 focus:ring-orange-400 focus:border-orange-400 bg-white text-amber-900" />
                        <span class="lucide lucide-lock absolute right-3 top-4 h-5 w-5 text-amber-600" data-lucide="lock"></span>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-sm text-red-600"></span>
                </div>

                <button type="submit"
                        class="w-full py-3 bg-gradient-to-r from-amber-500 to-orange-600 text-white text-center rounded-lg hover:from-amber-600 hover:to-orange-700 transition-all shadow-md hover:shadow-lg transform hover:scale-[1.02]">
                    Reset Password
                </button>
            </form>

            <div id="message-box"
                 class="fixed bottom-4 left-1/2 -translate-x-1/2 bg-green-500 text-white p-3 rounded-lg shadow-xl hidden transition-opacity duration-300 z-50"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/lucide@latest"></script>
    <script src="~/js/resetpassword.js"></script>
    <script>
        if (typeof lucide !== 'undefined' && lucide.createIcons) {
            lucide.createIcons();
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}
